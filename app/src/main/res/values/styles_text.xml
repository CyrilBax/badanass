<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style of card detail -->

    <!-- Text style for name of card into card detail -->
    <style name="TextAppearance_title_card_detail">
        <item name="android:textSize">@dimen/text_title_size_card_detail</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text style for type of card into card detail -->
    <style name="TextAppearance_sub_title_card_detail">
        <item name="android:textSize">@dimen/text_sub_title_size_card_detail</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Text style for information into card detail -->
    <style name="TextAppearance_info_local_card_detail">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">italic</item>
    </style>


    <!-- Style for card list -->

    <!-- Text style for type of card into card detail -->
    <style name="TextAppearance_title_card_list">
        <item name="android:textSize">@dimen/text_title_size_card_list</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text style for information into card detail -->
    <style name="TextAppearance_type_card_list">
        <item name="android:textSize">@dimen/text_info_size_card_list</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>